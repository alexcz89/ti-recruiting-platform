model Notification {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Receptor
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Tipo y contenido
  type     NotificationType
  priority NotificationPriority @default(MEDIUM)
  
  title    String  @db.VarChar(255)
  message  String  @db.Text
  
  // Metadata contextual (JSON flexible)
  metadata Json?
  
  // Acci√≥n (link y bot√≥n)
  actionUrl  String? @db.VarChar(500)
  actionText String? @db.VarChar(100)

  // Estado de lectura
  read      Boolean   @default(false)
  readAt    DateTime?
  
  // Archivado (soft delete)
  archived   Boolean   @default(false)
  archivedAt DateTime?

  // Tracking de delivery
  deliveries NotificationDelivery[]

  // √çndices para performance
  @@index([userId, read])
  @@index([userId, createdAt])
  @@index([type])
  @@map("notifications")
}

model NotificationDelivery {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  notificationId String
  notification   Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  
  channel   NotificationChannel
  
  // Estado de delivery
  sent      Boolean   @default(false)
  sentAt    DateTime?
  
  delivered Boolean   @default(false)
  deliveredAt DateTime?
  
  failed    Boolean   @default(false)
  failedAt  DateTime?
  error     String?   @db.Text
  
  // Metadata espec√≠fica del canal
  // Para EMAIL
  emailTo      String? @db.VarChar(255)
  emailSubject String? @db.VarChar(255)
  
  // Para WEBHOOK (futuro)
  webhookUrl      String? @db.Text
  webhookResponse String? @db.Text

  // √çndices
  @@index([notificationId])
  @@index([channel, sent])
  @@map("notification_deliveries")
}

model NotificationPreference {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type   NotificationType
  
  // Canales habilitados para este tipo de notificaci√≥n
  inApp   Boolean @default(true)
  email   Boolean @default(true)
  webhook Boolean @default(false)
  
  // Frecuencia de entrega (para future digest feature)
  frequency String @default("IMMEDIATE") // IMMEDIATE, HOURLY, DAILY, WEEKLY

  @@unique([userId, type])
  @@index([userId])
  @@map("notification_preferences")
}
