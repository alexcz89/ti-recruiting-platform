// =========================================================
// Prisma Schema - MEJORADO PARA SIGNUP OPTIMIZADO
// =========================================================
//
// CAMBIOS APLICADOS:
// ✅ User: firstName/lastName requeridos, maternalSurname agregado
// ✅ User: Metadata de onboarding (onboardingStep, profileCompleted, etc)
// ✅ User: Preferencias de búsqueda laboral (seekingRemote, desiredSalary, etc)
// ✅ User: Timestamps mejorados (lastLoginAt, lastActivityAt)
// ✅ User: Enum Gender agregado
// ✅ Company: Ubicación estructurada (locationLat/Lng, placeId, etc)
// ✅ RecruiterProfile: Campos profesionales expandidos
// ✅ Application: Timestamps por estado y tracking mejorado
// ✅ onDelete: Cascade agregado a TODAS las relaciones críticas
//
// NOTA: El campo User.name se mantiene temporalmente para migración
//       Se debe remover después de migrar datos existentes
// =========================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// ENUMS
// =========================

enum Role {
  ADMIN
  RECRUITER
  CANDIDATE
}

// ✅ NUEVO: Enum para género
enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

enum Seniority {
  JUNIOR
  MID
  SENIOR
  LEAD
}

enum ApplicationStatus {
  SUBMITTED
  REVIEWING
  INTERVIEW
  OFFER
  HIRED
  REJECTED
}

enum ApplicationInterest {
  REVIEW
  MAYBE
  ACCEPTED
  REJECTED
}

enum JobStatus {
  OPEN
  CLOSED
  PAUSED
}

enum TaxonomyKind {
  SKILL
  CERTIFICATION
  LANGUAGE
}

enum LanguageProficiency {
  NATIVE
  PROFESSIONAL
  CONVERSATIONAL
  BASIC
}

enum EducationLevel {
  NONE
  PRIMARY
  SECONDARY
  HIGH_SCHOOL
  TECHNICAL
  BACHELOR
  MASTER
  DOCTORATE
  OTHER
}

enum EducationStatus {
  ONGOING
  COMPLETED
  INCOMPLETE
}

enum LocationType {
  REMOTE
  HYBRID
  ONSITE
}

enum BillingPlan {
  FREE
  STARTER
  PRO
}

enum InvoiceStatus {
  PENDING
  ISSUED
  CANCELED
  ERROR
}

enum AssessmentType {
  MCQ
  CODING
  MIXED
}

enum AssessmentDifficulty {
  JUNIOR
  MID
  SENIOR
}

enum AttemptStatus {
  NOT_STARTED
  IN_PROGRESS
  SUBMITTED
  EVALUATED
  COMPLETED
}

enum AssessmentInviteStatus {
  SENT
  STARTED
  SUBMITTED
  EVALUATED
  COMPLETED
  CANCELLED
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

enum RecruiterStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CreditLedgerKind {
  ASSESSMENT_INVITE
}

enum NotificationType {
  NEW_APPLICATION
  APPLICATION_STATUS_CHANGE
  APPLICATION_COMMENT
  ASSESSMENT_INVITATION
  ASSESSMENT_REMINDER
  ASSESSMENT_COMPLETED
  ASSESSMENT_RESULTS
  JOB_POSTED
  JOB_CLOSING_SOON
  JOB_EXPIRED
  TEAM_MENTION
  TEAM_ASSIGNED
  ACCOUNT_VERIFIED
  PASSWORD_RESET
  SUBSCRIPTION_EXPIRING
}

enum NotificationChannel {
  IN_APP
  EMAIL
  WEBHOOK
}

enum NotificationPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum QuestionType {
  MULTIPLE_CHOICE
  OPEN_ENDED
  CODING
}

// =========================
// MODELS
// =========================

model Invoice {
  id String @id @default(cuid())

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  customerName  String
  customerRfc   String  @db.VarChar(13)
  customerEmail String?

  cfdiUse       String? @db.VarChar(5)
  paymentMethod String? @db.VarChar(3)
  paymentForm   String? @db.VarChar(3)
  currency      String  @default("MXN")

  subtotal Decimal @db.Decimal(10, 2)
  tax      Decimal @db.Decimal(10, 2)
  total    Decimal @db.Decimal(10, 2)

  externalId String?
  uuid       String? @unique
  series     String?
  folio      String?

  pdfUrl String?
  xmlUrl String?

  status    InvoiceStatus @default(PENDING)
  createdAt DateTime      @default(now())
  issuedAt  DateTime?
  updatedAt DateTime      @default(now()) @updatedAt

  @@index([companyId, status])
  @@index([uuid])
}

model Company {
  id      String  @id @default(cuid())
  name    String
  domain  String? @unique
  website String?
  size    String?
  logoUrl String?
  logoKey String?

  billingPlan BillingPlan @default(FREE)

  // ✅ UBICACIÓN ESTRUCTURADA (mejorada)
  country     String?
  city        String?
  location    String? // "Monterrey, NL, México"
  locationLat Float? // 25.6866
  locationLng Float? // -100.3161
  placeId     String? // Google Places ID
  state       String? // "Nuevo León"
  postalCode  String? // "64000"
  address     String? // Dirección completa
  cityNorm    String? // "monterrey" (normalizado para búsquedas)
  stateNorm   String? // "nuevo leon" (normalizado)

  // Datos fiscales (México)
  taxLegalName     String?
  taxRfc           String? @db.VarChar(13)
  taxRegime        String? @db.VarChar(3)
  taxZip           String? @db.VarChar(5)
  taxAddressLine1  String?
  taxAddressLine2  String?
  taxEmail         String?
  cfdiUseDefault   String? @db.VarChar(5)
  taxDataCompleted Boolean @default(false)

  users                   User[]
  jobs                    Job[]
  templates               JobTemplate[]                  @relation("CompanyTemplates")
  invoices                Invoice[]
  assessmentInviteCharges AssessmentInviteChargeLedger[]

  // ✅ NUEVO: Sistema de créditos para evaluaciones
  assessmentCredits         Decimal   @default(0) @db.Decimal(10, 2)
  assessmentCreditsUsed     Decimal   @default(0) @db.Decimal(10, 2)
  assessmentCreditsReserved Decimal   @default(0) @db.Decimal(10, 2)
  lastCreditRefill          DateTime?

  // Plan de evaluaciones
  assessmentPlan                String? // "BASIC" | "PRO" | "ENTERPRISE"
  assessmentPlanCreditsPerMonth Int       @default(0)
  assessmentPlanStartedAt       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // ✅ ÍNDICES MEJORADOS
  @@index([domain])
  @@index([cityNorm])
  @@index([country, city])
  @@index([billingPlan])
  @@index([assessmentCredits])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String?
  role          Role      @default(CANDIDATE)
  emailVerified DateTime?

  // ✅ NOMBRES ESTRUCTURADOS
  // IMPORTANTE: 'name' se mantiene temporalmente para migración
  // TODO: Remover después de migrar datos existentes
  name            String? // DEPRECATED - usar firstName/lastName
  firstName       String? // Será REQUERIDO después de migración
  lastName        String? // Será REQUERIDO después de migración
  middleName      String? // Segundo nombre (opcional)
  maternalSurname String? // ✅ NUEVO: Apellido materno (común en LATAM)

  // CONTACTO
  phone            String?
  phoneVerified    DateTime?
  phoneCountryCode String?   @default("+52")

  // UBICACIÓN (mantener estructura existente)
  location    String?
  locationLat Float?
  locationLng Float?
  country     String? @db.VarChar(2)
  admin1      String?
  city        String?
  cityNorm    String?
  admin1Norm  String?
  placeId     String?
  placeSource String?

  // PERFIL PROFESIONAL (mantener existente)
  linkedin  String?
  github    String?
  resumeUrl String?
  birthdate DateTime?

  // ✅ NUEVO: Género
  gender Gender?

  // ✅ NUEVO: ONBOARDING Y COMPLETITUD
  onboardingStep    Int     @default(0) // 0-3: pasos del signup completados
  profileCompleted  Boolean @default(false) // true cuando perfil está completo
  profileCompletion Int     @default(0) // 0-100: porcentaje de completitud

  // ✅ NUEVO: METADATA DE SIGNUP
  signupSource    String? // "organic", "linkedin", "google", "referral"
  signupDevice    String? // "mobile", "desktop", "tablet"
  signupIp        String?
  signupUserAgent String?

  // ✅ NUEVO: PREFERENCIAS DE BÚSQUEDA LABORAL
  seekingRemote    Boolean   @default(false)
  seekingHybrid    Boolean   @default(false)
  seekingOnsite    Boolean   @default(false)
  desiredSalaryMin Int?
  desiredSalaryMax Int?
  desiredCurrency  String?   @default("MXN")
  openToRelocate   Boolean   @default(false)
  availableFrom    DateTime?

  // ✅ NUEVO: NOTIFICACIONES POR TIPO DE TRABAJO
  notifyRemoteJobs Boolean @default(true)
  notifyOnsiteJobs Boolean @default(true)
  notifyHybridJobs Boolean @default(true)

  // ✅ NUEVO: CONFIGURACIÓN
  timezone String? @default("America/Monterrey")
  locale   String? @default("es-MX")
  theme    String? @default("light")

  // SKILLS Y EDUCACIÓN (mantener existente)
  certifications        String[]       @default([])
  highestEducationLevel EducationLevel @default(NONE)

  // ✅ NUEVO: TIMESTAMPS MEJORADOS
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now()) @updatedAt
  lastLoginAt        DateTime?
  lastActivityAt     DateTime?
  profileLastUpdated DateTime?

  // ✅ NUEVO: ESTADO DE CUENTA
  isActive        Boolean   @default(true)
  isSuspended     Boolean   @default(false)
  suspendedAt     DateTime?
  suspendedReason String?
  deletedAt       DateTime? // Soft delete

  // RELACIONES (mantener todas las existentes)
  applications              Application[]
  jobs                      Job[]                    @relation("PostedJobs")
  company                   Company?                 @relation(fields: [companyId], references: [id])
  companyId                 String?
  candidateSkills           CandidateSkill[]
  candidateCredentials      CandidateCredential[]
  candidateLanguages        CandidateLanguage[]
  recruiterProfile          RecruiterProfile?
  experiences               WorkExperience[]
  education                 Education[]
  createdTemplates          JobTemplate[]            @relation("UserCreatedTemplates")
  resumes                   Resume[]
  assessmentAttempts        AssessmentAttempt[]
  assessmentInvitesReceived AssessmentInvite[]       @relation("AssessmentInviteCandidate")
  assessmentInvitesSent     AssessmentInvite[]       @relation("AssessmentInviteInvitedBy")
  codeExecutions            CodeExecution[]
  notifications             Notification[]
  notificationPreferences   NotificationPreference[]
  autoLoginTokens           AutoLoginToken[] 

  // FLAGS DE NOTIFICACIONES (mantener)
  emailNotificationsEnabled Boolean @default(true)
  pushNotificationsEnabled  Boolean @default(false)

  // ✅ ÍNDICES MEJORADOS
  @@index([email])
  @@index([role])
  @@index([companyId])
  @@index([locationLat, locationLng])
  @@index([country])
  @@index([country, admin1])
  @@index([country, city])
  @@index([cityNorm])
  @@index([admin1Norm])
  @@index([profileCompleted]) // NUEVO
  @@index([onboardingStep]) // NUEVO
  @@index([lastActivityAt]) // NUEVO
  @@index([createdAt])
}

model AutoLoginToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
}

model WorkExperience {
  id          String    @id @default(cuid())
  userId      String
  role        String
  company     String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startDate])
  @@index([userId, isCurrent])
}

model Education {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  level  EducationLevel?
  status EducationStatus

  institution String
  program     String?
  country     String? @db.VarChar(2)
  city        String?

  startDate   DateTime?
  endDate     DateTime?
  grade       String?
  description String?

  sortIndex Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([userId, status])
  @@index([userId, sortIndex])
  @@index([userId, endDate])
}

model Job {
  id    String @id @default(cuid())
  title String

  slug String? @unique

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  location     String
  locationLat  Float?
  locationLng  Float?
  locationType LocationType @default(ONSITE)

  country    String? @db.VarChar(2)
  admin1     String?
  city       String?
  cityNorm   String?
  admin1Norm String?

  employmentType  EmploymentType
  seniority       Seniority?
  description     String         @db.Text
  descriptionHtml String?        @db.Text
  schedule        String?
  publishAt       DateTime?

  skills         String[]
  requiredSkills JobRequiredSkill[]

  salaryMin  Int?
  salaryMax  Int?
  currency   String? @default("MXN")
  showSalary Boolean @default(false)

  remote Boolean @default(false)

  benefitsJson Json?
  showBenefits Boolean @default(true)

  educationJson Json?
  minDegree     EducationLevel?
  skillsJson    Json?
  certsJson     Json?

  companyConfidential Boolean @default(false)

  status JobStatus @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  recruiterId String?
  recruiter   User?   @relation("PostedJobs", fields: [recruiterId], references: [id], onDelete: SetNull)

  applications Application[]

  assessments JobAssessment[]

  assessmentInvites AssessmentInvite[]

  @@index([companyId])
  @@index([title])
  @@index([location])
  @@index([locationLat, locationLng])
  @@index([country])
  @@index([country, admin1])
  @@index([country, city])
  @@index([cityNorm])
  @@index([admin1Norm])
  @@index([status])
  @@index([employmentType, status])
  @@index([publishAt])
}

model Application {
  id          String            @id @default(cuid())
  jobId       String
  candidateId String
  resumeUrl   String?
  coverLetter String?
  status      ApplicationStatus @default(SUBMITTED)

  // ✅ TIMESTAMPS MEJORADOS
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // ✅ NUEVO: Timestamps detallados por estado
  submittedAt DateTime  @default(now())
  reviewingAt DateTime?
  interviewAt DateTime?
  offerAt     DateTime?
  hiredAt     DateTime?
  rejectedAt  DateTime?

  rejectionEmailSent Boolean @default(false)

  recruiterInterest ApplicationInterest @default(REVIEW)

  // ✅ NUEVO: Razones y notas
  rejectionReason String? @db.Text
  internalNotes   String? @db.Text
  recruiterNotes  String? @db.Text

  // ✅ NUEVO: Fuente y tracking
  source      String? // "direct", "linkedin", "referral", "indeed"
  referredBy  String?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?

  // ✅ NUEVO: Vistas y engagement
  viewCount    Int       @default(0)
  lastViewedAt DateTime?
  lastViewedBy String?
  starred      Boolean   @default(false)
  starredAt    DateTime?

  // ✅ NUEVO: Colaboración
  assignedTo String?
  assignedAt DateTime?

  // ✅ NUEVO: Recordatorios
  followUpAt   DateTime?
  followUpDone Boolean   @default(false)

  candidate User @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  job       Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)

  messages Message[]

  assessmentAttempts AssessmentAttempt[]

  assessmentInvites AssessmentInvite[]

  @@unique([candidateId, jobId])
  @@index([status, createdAt])
  @@index([status, rejectedAt, rejectionEmailSent])
  @@index([recruiterInterest])
  // ✅ NUEVOS ÍNDICES
  @@index([jobId, status])
  @@index([assignedTo])
  @@index([starred])
  @@index([source])
}

model Plan {
  id                String   @id @default(cuid())
  name              String
  slug              String   @unique
  monthlyPriceCents Int
  currency          String
  maxActiveJobs     Int?
  maxUsers          Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now()) @updatedAt

  subscriptions Subscription[]
}

model Subscription {
  id        String @id @default(cuid())
  accountId String
  planId    String
  plan      Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)

  status           SubscriptionStatus @default(ACTIVE)
  startedAt        DateTime           @default(now())
  currentPeriodEnd DateTime
  canceledAt       DateTime?

  stripeCustomerId     String?
  stripeSubscriptionId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model JobTemplate {
  id String @id @default(cuid())

  companyId String
  company   Company @relation(fields: [companyId], references: [id], name: "CompanyTemplates", onDelete: Cascade)

  title   String
  payload Json

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  lastUsedAt DateTime?

  creatorId String?
  creator   User?   @relation(fields: [creatorId], references: [id], name: "UserCreatedTemplates", onDelete: SetNull)

  @@index([companyId, updatedAt])
  @@index([lastUsedAt])
}

model CodexEntry {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String   @db.Text
  tags      String[]
  tech      String?
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([published, createdAt])
}

model RecruiterProfile {
  id     String          @id @default(cuid())
  userId String          @unique
  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  status RecruiterStatus @default(PENDING)

  // Campos existentes
  company String
  website String?
  phone   String?

  // ✅ NUEVO: Información profesional
  jobTitle       String? // "Senior Technical Recruiter"
  department     String? // "Human Resources"
  phoneExtension String?
  directPhone    String?
  bio            String? @db.Text

  // ✅ NUEVO: Metadata de actividad
  activeJobsCount   Int  @default(0)
  totalHires        Int  @default(0)
  avgTimeToHire     Int? // Días promedio
  totalApplications Int  @default(0)

  // ✅ NUEVO: Preferencias
  preferredLanguage String? @default("es")
  timezone          String? @default("America/Monterrey")

  // ✅ NUEVO: Aprobación detallada
  approvedAt     DateTime?
  approvedBy     String?
  rejectedAt     DateTime?
  rejectedReason String?   @db.Text

  // ✅ NUEVO: Especialización
  specializations String[] @default([]) // ["tech", "sales", "marketing"]
  industries      String[] @default([]) // ["software", "fintech", "ecommerce"]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // ✅ NUEVOS ÍNDICES
  @@index([userId])
  @@index([status])
  @@index([activeJobsCount])
}

model Message {
  id            String   @id @default(cuid())
  applicationId String
  fromUserId    String
  toUserId      String
  body          String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  action    String
  target    String?
  meta      Json?
  createdAt DateTime @default(now())
}

model TaxonomyTerm {
  id          String       @id @default(cuid())
  kind        TaxonomyKind
  slug        String
  label       String
  aliases     String[]     @default([])
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt

  requiredByJobs  JobRequiredSkill[]
  candidateSkills CandidateSkill[]
  candidateCreds  CandidateCredential[]
  candidateLangs  CandidateLanguage[]

  @@unique([kind, slug])
  @@index([kind])
}

model JobRequiredSkill {
  id     String  @id @default(cuid())
  jobId  String
  termId String
  must   Boolean @default(true)
  weight Int?

  job  Job          @relation(fields: [jobId], references: [id], onDelete: Cascade)
  term TaxonomyTerm @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@unique([jobId, termId])
  @@index([termId])
}

model CandidateSkill {
  id     String @id @default(cuid())
  userId String
  termId String
  level  Int?
  years  Int?

  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  term TaxonomyTerm @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@unique([userId, termId])
  @@index([termId])
}

model CandidateLanguage {
  id     String              @id @default(cuid())
  userId String
  termId String
  level  LanguageProficiency

  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  term TaxonomyTerm @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@unique([userId, termId])
  @@index([termId])
}

model CandidateCredential {
  id           String    @id @default(cuid())
  userId       String
  termId       String
  issuer       String?
  issuedAt     DateTime?
  expiresAt    DateTime?
  credentialId String?
  url          String?

  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  term TaxonomyTerm @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@index([termId])
  @@index([userId, termId])
}

model Resume {
  id           String   @id @default(cuid())
  userId       String
  title        String   @default("Mi CV")
  data         Json
  htmlSnapshot String   @db.Text
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

// =========================================================
// ASSESSMENT SYSTEM
// =========================================================

model AssessmentTemplate {
  id          String  @id @default(cuid())
  title       String
  slug        String  @unique
  description String? @db.Text

  type       AssessmentType
  difficulty AssessmentDifficulty

  totalQuestions Int
  passingScore   Int
  timeLimit      Int

  sections Json

  allowRetry       Boolean @default(false)
  maxAttempts      Int     @default(1)
  shuffleQuestions Boolean @default(true)
  penalizeWrong    Boolean @default(false)
  // ✅ NUEVO: Configuración de costos
  baseCreditCost   Decimal @default(1.0) @db.Decimal(10, 2)

  // Metadata de pricing
  pricingConfig Json? // { reserve: 0.5, onComplete: 0.5, refundIfNotCompleted: true }

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  questions        AssessmentQuestion[]
  codingChallenges CodingChallenge[]
  jobAssessments   JobAssessment[]
  attempts         AssessmentAttempt[]

  invites AssessmentInvite[]

  @@index([slug])
  @@index([type, difficulty])
}

model AssessmentInviteChargeLedger {
  id String @id @default(cuid())

  inviteId String
  invite   AssessmentInvite @relation(fields: [inviteId], references: [id], onDelete: Cascade)

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  kind  CreditLedgerKind @default(ASSESSMENT_INVITE)
  cycle Int

  // ✅ CAMBIAR: amount ahora es Decimal
  amount Decimal @db.Decimal(10, 2)

  // ✅ NUEVO: Tracking detallado de estados
  status String @default("RESERVED") // RESERVED | CHARGED | REFUNDED | CANCELLED

  reservedAmount Decimal? @db.Decimal(10, 2)
  chargedAmount  Decimal? @db.Decimal(10, 2)
  refundedAmount Decimal? @db.Decimal(10, 2)

  // Metadata
  assessmentType AssessmentType?
  difficulty     AssessmentDifficulty?

  meta Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // ✅ NUEVO: Índices para queries eficientes
  @@unique([inviteId, kind, cycle, status])
  @@index([companyId, status])
  @@index([status, createdAt])
  @@index([cycle])
  @@index([inviteId])
}

model AssessmentQuestion {
  id         String             @id @default(cuid())
  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  section    String
  difficulty AssessmentDifficulty
  tags       String[]

  questionText String  @db.Text
  codeSnippet  String? @db.Text

  options       Json
  allowMultiple Boolean @default(false)
  explanation   String? @db.Text
  isActive      Boolean @default(true)
  timesUsed     Int     @default(0)

  type QuestionType @default(MULTIPLE_CHOICE)

  language         String? // javascript, python, java, cpp
  starterCode      String? @db.Text
  solutionCode     String? @db.Text
  allowedLanguages String?
  codingConfig     Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  answers         AttemptAnswer[]
  testCases       CodeTestCase[]
  executions      CodeExecution[]
  PlagiarismCheck PlagiarismCheck[]

  @@index([templateId, section])
  @@index([type])
}

model CodeTestCase {
  id         String             @id @default(cuid())
  questionId String
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  input          String  @db.Text
  expectedOutput String  @db.Text
  isHidden       Boolean @default(false)
  points         Int     @default(1)

  timeoutMs     Int @default(5000)
  memoryLimitMb Int @default(256)

  orderIndex Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([questionId])
  @@index([questionId, isHidden])
}

model CodingChallenge {
  id         String             @id @default(cuid())
  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  title       String
  description String               @db.Text
  difficulty  AssessmentDifficulty
  timeLimit   Int

  instructions String @db.Text
  starterCode  String @db.Text

  inputFiles Json
  testCases  Json

  language    String
  allowedLibs String[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  submissions CodingSubmission[]

  @@index([templateId])
}

model JobAssessment {
  id    String @id @default(cuid())
  jobId String
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  isRequired Boolean @default(true)
  minScore   Int?
  triggerAt  String  @default("AFTER_APPLY")

  createdAt DateTime @default(now())

  @@unique([jobId, templateId])
  @@index([jobId])
}

model AssessmentAttempt {
  id String @id @default(cuid())

  candidateId String
  candidate   User   @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  inviteId String?           @unique
  invite   AssessmentInvite? @relation("InviteAttempt", fields: [inviteId], references: [id], onDelete: SetNull)

  status        AttemptStatus @default(NOT_STARTED)
  attemptNumber Int           @default(1)

  startedAt   DateTime?
  submittedAt DateTime?
  expiresAt   DateTime?
  timeSpent   Int?

  totalScore    Int?
  sectionScores Json?
  passed        Boolean?

  flagsJson Json?
  ipAddress String?
  userAgent String?

  tabSwitches      Int @default(0)
  visibilityHidden Int @default(0)
  copyAttempts     Int @default(0)
  pasteAttempts    Int @default(0)
  rightClicks      Int @default(0)
  focusLoss        Int @default(0)
  pageHides        Int @default(0)

  firstClientSig String?
  lastClientSig  String?
  multiSession   Boolean @default(false)

  severityScore Int    @default(0)
  severity      String @default("NORMAL")

  events AssessmentAttemptEvent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  answers           AttemptAnswer[]
  codingSubmissions CodingSubmission[]
  codeExecutions    CodeExecution[]

  @@index([candidateId, status])
  @@index([applicationId])
  @@index([templateId, status])
  @@index([candidateId, templateId, status])
  @@index([applicationId, templateId, status])
  @@index([severity, severityScore])
  @@index([multiSession])
}

model AssessmentInvite {
  id     String                 @id @default(cuid())
  token  String                 @unique
  status AssessmentInviteStatus @default(SENT)

  applicationId String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  jobId String
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  candidateId String
  candidate   User   @relation("AssessmentInviteCandidate", fields: [candidateId], references: [id], onDelete: Cascade)

  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  invitedById String?
  invitedBy   User?   @relation("AssessmentInviteInvitedBy", fields: [invitedById], references: [id], onDelete: SetNull)

  sentAt      DateTime?
  startedAt   DateTime?
  submittedAt DateTime?
  cancelledAt DateTime?
  expiresAt   DateTime?

  chargeCount Int       @default(0)
  chargedAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  attempt AssessmentAttempt? @relation("InviteAttempt")

  charges AssessmentInviteChargeLedger[]

  @@unique([applicationId, templateId])
  @@index([applicationId])
  @@index([jobId])
  @@index([candidateId])
  @@index([templateId])
  @@index([applicationId, templateId, status])
  @@index([candidateId, updatedAt])
}

model AttemptAnswer {
  id String @id @default(cuid())

  attemptId String
  attempt   AssessmentAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  questionId String
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  selectedOptions String[]

  isCorrect    Boolean?
  pointsEarned Float?
  timeSpent    Int?

  answeredAt DateTime @default(now())

  codeSubmission   String? @db.Text
  language         String?
  executionResults Json?
  passedTests      Int     @default(0)
  totalTests       Int     @default(0)
  executionTime    Int?
  memoryUsed       Int?

  plagiarismChecks PlagiarismCheck[]

  @@unique([attemptId, questionId])
  @@index([attemptId])
  @@index([questionId])
}

model CodeExecution {
  id          String             @id @default(cuid())
  attemptId   String
  attempt     AssessmentAttempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  questionId  String
  question    AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  candidateId String
  candidate   User               @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  code     String @db.Text
  language String
  status   String

  output          String? @db.Text
  error           String? @db.Text
  executionTimeMs Int?
  memoryUsedMb    Int?

  testResults  Json?
  isSubmission Boolean @default(false)

  createdAt DateTime @default(now())

  @@index([attemptId])
  @@index([questionId])
  @@index([candidateId])
  @@index([isSubmission])
}

model PlagiarismCheck {
  id         String             @id @default(cuid())
  answerId   String
  answer     AttemptAnswer      @relation(fields: [answerId], references: [id], onDelete: Cascade)
  questionId String
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  similarityScore Float
  matchedSources  Json?

  checkedAt DateTime @default(now())

  @@index([answerId])
  @@index([similarityScore])
}

model AssessmentAttemptEvent {
  id          String   @id @default(cuid())
  attemptId   String
  candidateId String
  type        String
  meta        Json?
  eventId     String?
  clientSig   String?
  ipPrefix    String?
  userAgent   String?
  createdAt   DateTime @default(now())

  attempt AssessmentAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  @@unique([attemptId, eventId])
  @@index([attemptId, createdAt])
  @@index([candidateId, createdAt])
  @@index([type, createdAt])
}

model CodingSubmission {
  id String @id @default(cuid())

  attemptId String
  attempt   AssessmentAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  challengeId String
  challenge   CodingChallenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  code     String @db.Text
  language String

  testResults Json?
  autoScore   Int?

  manualScores Json?
  manualScore  Int?
  finalScore   Int?

  feedback   String?   @db.Text
  reviewedBy String?
  reviewedAt DateTime?

  submittedAt DateTime @default(now())

  @@index([attemptId])
  @@index([challengeId])
}

