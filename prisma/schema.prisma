// =========================================================
// Prisma Schema
// =========================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
enum Role {
  ADMIN
  RECRUITER
  CANDIDATE
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

// ðŸ‘‡ NUEVO: seniority para vacantes
enum Seniority {
  JUNIOR
  MID
  SENIOR
  LEAD
}

enum ApplicationStatus {
  SUBMITTED
  REVIEWING
  INTERVIEW
  OFFER
  HIRED
  REJECTED
}

// ðŸ‘‡ InterÃ©s del reclutador
enum ApplicationInterest {
  REVIEW
  MAYBE
  ACCEPTED
  REJECTED
}

// ðŸ‘‡ Estatus de la vacante
enum JobStatus {
  OPEN
  CLOSED
  PAUSED
}

// CatÃ¡logo: tipo de tÃ©rmino
enum TaxonomyKind {
  SKILL
  CERTIFICATION
  LANGUAGE
}

// Nivel de idiomas
enum LanguageProficiency {
  NATIVE
  PROFESSIONAL
  CONVERSATIONAL
  BASIC
}

// =========================
// Escolaridad (para candidatos y minDegree en Job)
// =========================
enum EducationLevel {
  NONE
  PRIMARY
  SECONDARY
  HIGH_SCHOOL
  TECHNICAL
  BACHELOR
  MASTER
  DOCTORATE
  OTHER
}

enum EducationStatus {
  ONGOING
  COMPLETED
  INCOMPLETE
}

// =========================
// UbicaciÃ³n de la vacante
// =========================
enum LocationType {
  REMOTE
  HYBRID
  ONSITE
}

// =========================
// Plan de facturaciÃ³n de la empresa (para lÃ­mites de vacantes)
// =========================
enum BillingPlan {
  FREE
  PRO
  BUSINESS
  AGENCY
}

// =========================
// CFDI / Facturas
// =========================

enum InvoiceStatus {
  PENDING      // Creada en tu sistema, aÃºn sin timbrar
  ISSUED       // Timbrada correctamente
  CANCELED     // Cancelada en el SAT
  ERROR        // Error al timbrar o al comunicarse con el PAC
}

// =========================
// ASSESSMENT SYSTEM
// =========================

enum AssessmentType {
  MCQ
  CODING
  MIXED
}

enum AssessmentDifficulty {
  JUNIOR
  MID
  SENIOR
}

enum AttemptStatus {
  NOT_STARTED
  IN_PROGRESS
  SUBMITTED
  EVALUATED
}

// âœ… NUEVO: status para invitaciones (enviar evaluaciÃ³n por candidato)
enum AssessmentInviteStatus {
  SENT
  STARTED
  SUBMITTED
  EVALUATED
  CANCELLED
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

enum RecruiterStatus {
  PENDING
  APPROVED
  REJECTED
}

// =========================

model Invoice {
  id        String   @id @default(cuid())

  // RelaciÃ³n con la empresa que estÃ¡ usando Bolsa TI
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  // Datos del receptor (tu cliente)
  customerName  String
  customerRfc   String   @db.VarChar(13)
  customerEmail String?

  // Campos CFDI tÃ­picos
  cfdiUse       String?  @db.VarChar(5)  // p.ej. "G03"
  paymentMethod String?  @db.VarChar(3)  // p.ej. "PUE"
  paymentForm   String?  @db.VarChar(3)  // p.ej. "03" transferencia
  currency      String   @default("MXN")

  // Importes
  subtotal Decimal @db.Decimal(10, 2)
  tax      Decimal @db.Decimal(10, 2)
  total    Decimal @db.Decimal(10, 2)

  // RelaciÃ³n con Factura.com / CFDI
  externalId String?      // id de factura.com (si lo maneja)
  uuid       String? @unique // UUID del CFDI una vez timbrado
  series     String?
  folio      String?

  // Enlaces a archivos (puedes guardarlos en S3 luego)
  pdfUrl String?
  xmlUrl String?

  status    InvoiceStatus @default(PENDING)
  createdAt DateTime      @default(now())
  issuedAt  DateTime?
  updatedAt DateTime      @updatedAt

  @@index([companyId, status])
  @@index([uuid])
}

// =========================
model Company {
  id      String  @id @default(cuid())
  name    String
  country String?
  city    String?
  domain  String?  @unique   // ðŸ‘ˆ clave: un solo registro por dominio
  website String?
  size    String?
  logoUrl String?
  logoKey String?

  // Plan de facturaciÃ³n actual (lo usa /api/jobs con config/plans.ts)
  billingPlan BillingPlan @default(FREE)

  // âœ… Datos fiscales para CFDI (facturaciÃ³n)
  taxLegalName     String?       // RazÃ³n social
  taxRfc           String? @db.VarChar(13)
  taxRegime        String? @db.VarChar(3)   // CÃ³digo de rÃ©gimen (ej. "601", "612", etc.)
  taxZip           String? @db.VarChar(5)   // C.P. domicilio fiscal
  taxAddressLine1  String?                 // Calle y nÃºmero
  taxAddressLine2  String?                 // Colonia / interior / detalles
  taxEmail         String?                 // Correo para envÃ­o de CFDI
  cfdiUseDefault   String? @db.VarChar(5)  // Uso CFDI preferido (ej. "G03")
  taxDataCompleted Boolean @default(false)

  users User[]
  jobs  Job[]
  // ðŸ‘‡ back-relation para plantillas
  templates JobTemplate[] @relation("CompanyTemplates")

  // ðŸ‘‡ back-relation con facturas CFDI
  invoices Invoice[]

  createdAt DateTime @default(now())
}

// =========================
model User {
  id           String   @id @default(cuid())
  name         String?
  firstName    String?
  middleName   String?
  lastName     String?
  email        String   @unique
  passwordHash String?
  role         Role     @default(CANDIDATE)
  createdAt    DateTime @default(now())

  // âœ… nuevo (requerido por tu flujo de verificaciÃ³n)
  emailVerified DateTime?

  applications Application[]
  jobs         Job[] @relation("PostedJobs")

  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?

  // EXISTENTES
  location    String?
  locationLat Float?
  locationLng Float?

  // Nuevos para filtros de ubicaciÃ³n
  country    String? @db.VarChar(2)
  admin1     String?
  city       String?
  cityNorm   String?
  admin1Norm String?

  // Opcionales (proveedor de geodatos)
  placeId     String?
  placeSource String?

  phone     String?
  birthdate DateTime?
  linkedin  String?
  github    String?
  resumeUrl String?

  // Skills y certificaciones simples
  skills         String[] @default([])
  certifications String[] @default([])

  // Relaciones detalladas
  candidateSkills      CandidateSkill[]
  candidateCredentials CandidateCredential[]
  candidateLanguages   CandidateLanguage[]

  recruiterProfile RecruiterProfile?

  // Historial laboral
  experiences WorkExperience[]

  // Escolaridad
  highestEducationLevel EducationLevel @default(NONE)
  education             Education[]

  // ðŸ‘‡ back-relation para plantillas creadas por el usuario
  createdTemplates JobTemplate[] @relation("UserCreatedTemplates")

  // ðŸ‘‡ NUEVO: versiones de CV guardadas
  resumes Resume[]

  // ðŸ‘‡ NUEVO: assessment attempts
  assessmentAttempts AssessmentAttempt[]

  // ðŸ‘‡ NUEVO: invites de assessments
  assessmentInvitesReceived AssessmentInvite[] @relation("AssessmentInviteCandidate")
  assessmentInvitesSent     AssessmentInvite[] @relation("AssessmentInviteInvitedBy")

  @@index([locationLat, locationLng])
  @@index([country])
  @@index([country, admin1])
  @@index([country, city])
  @@index([cityNorm])
  @@index([admin1Norm])
}

// =========================
model WorkExperience {
  id          String   @id @default(cuid())
  userId      String
  role        String
  company     String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean  @default(false)
  description String?  // 1 bullet por lÃ­nea, texto plano
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startDate])
  @@index([userId, isCurrent])
}

// =========================
// EducaciÃ³n (lista)
// =========================
model Education {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  level  EducationLevel?
  status EducationStatus

  institution String
  program     String?
  country     String? @db.VarChar(2)
  city        String?

  startDate   DateTime?
  endDate     DateTime?
  grade       String?
  description String?

  // Orden manual para drag & drop
  sortIndex Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
  @@index([userId, sortIndex])
  @@index([userId, endDate])
}

// =========================
// Vacantes
// =========================
model Job {
  id    String @id @default(cuid())
  title String

  // Slug para URL pÃºblica (opcional)
  slug String? @unique

  // Requerido (multiempresa)
  companyId String
  company   Company @relation(fields: [companyId], references: [id])

  // UbicaciÃ³n y tipo
  location     String
  locationLat  Float?
  locationLng  Float?
  locationType LocationType @default(ONSITE)

  // Filtros por ubicaciÃ³n (estructurado)
  country    String? @db.VarChar(2)
  admin1     String?
  city       String?
  cityNorm   String?
  admin1Norm String?

  // PublicaciÃ³n
  employmentType EmploymentType
  seniority      Seniority? // ðŸ‘ˆ NUEVO (lo usa tu seed.ts)
  description    String     @db.Text
  descriptionHtml String?   @db.Text
  schedule       String?    // ej. "L-V 9:00â€“18:00"
  publishAt      DateTime?  // publicaciÃ³n programada

  // Lista simple y relaciÃ³n catÃ¡logo
  skills         String[]
  requiredSkills JobRequiredSkill[]

  // CompensaciÃ³n
  salaryMin  Int?
  salaryMax  Int?
  currency   String? @default("MXN")
  showSalary Boolean @default(false)

  // Remoto (compatibilidad). Preferir locationType
  remote Boolean @default(false)

  // Prestaciones y banderas de visibilidad
  benefitsJson Json?
  showBenefits Boolean @default(true)

  // EducaciÃ³n / Skills / Certs (payloads del wizard)
  educationJson Json?
  minDegree     EducationLevel?
  skillsJson    Json?
  certsJson     Json?

  // Privacidad
  companyConfidential Boolean @default(false)

  // Estatus de la vacante
  status JobStatus @default(OPEN)

  // AuditorÃ­a
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Reclutador que publicÃ³
  recruiterId String?
  recruiter   User? @relation("PostedJobs", fields: [recruiterId], references: [id])

  // Relaciones
  applications Application[]

  // ðŸ‘‡ NUEVO: assessments
  assessments JobAssessment[]

  // ðŸ‘‡ NUEVO: invites enviados para esta vacante
  assessmentInvites AssessmentInvite[]

  @@index([companyId])
  @@index([title])
  @@index([location])
  @@index([locationLat, locationLng])
  @@index([country])
  @@index([country, admin1])
  @@index([country, city])
  @@index([cityNorm])
  @@index([admin1Norm])
  @@index([status])
  @@index([employmentType, status])
  @@index([publishAt])
}

// =========================
model Application {
  id          String            @id @default(cuid())
  jobId       String
  candidateId String
  resumeUrl   String?
  coverLetter String?
  status      ApplicationStatus @default(SUBMITTED)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @default(now()) @updatedAt

  // LÃ³gica de rechazo diferido
  rejectedAt         DateTime?
  rejectionEmailSent Boolean @default(false)

  // InterÃ©s/estado del reclutador
  recruiterInterest ApplicationInterest @default(REVIEW)

  candidate User @relation(fields: [candidateId], references: [id])
  job       Job  @relation(fields: [jobId], references: [id])

  messages Message[]

  // ðŸ‘‡ NUEVO: assessments
  assessmentAttempts AssessmentAttempt[]

  // ðŸ‘‡ NUEVO: invites (enviar evaluaciÃ³n por postulaciÃ³n)
  assessmentInvites AssessmentInvite[]

  @@unique([candidateId, jobId])
  @@index([status, createdAt])
  @@index([status, rejectedAt, rejectionEmailSent])
  @@index([recruiterInterest])
}

// ==========================
// Planes de suscripciÃ³n (tabla genÃ©rica, para cuando quieras Stripe, etc.)
// ==========================

model Plan {
  id                String   @id @default(cuid())
  name              String   // "Gratis", "Pro", etc.
  slug              String   @unique // "free", "pro", "business", "agency"
  monthlyPriceCents Int      // en centavos: 99900 = $999.00
  currency          String   // "MXN"
  maxActiveJobs     Int?     // null = ilimitado
  maxUsers          Int?     // null = ilimitado
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  subscriptions Subscription[]
}

model Subscription {
  id        String @id @default(cuid())
  accountId String // o companyId, segÃºn tu modelo futuro
  planId    String
  plan      Plan   @relation(fields: [planId], references: [id])

  status           SubscriptionStatus @default(ACTIVE)
  startedAt        DateTime           @default(now())
  currentPeriodEnd DateTime
  canceledAt       DateTime?

  stripeCustomerId     String?
  stripeSubscriptionId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =========================
// Plantillas de vacante (para "Usar vacante anterior")
// =========================
model JobTemplate {
  id String @id @default(cuid())

  companyId String
  company   Company @relation(fields: [companyId], references: [id], name: "CompanyTemplates")

  title   String
  payload Json // snapshot del wizard (todos los campos)

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  lastUsedAt DateTime?

  // (Opcional) quiÃ©n la creÃ³
  creatorId String?
  creator   User? @relation(fields: [creatorId], references: [id], name: "UserCreatedTemplates")

  @@index([companyId, updatedAt])
  @@index([lastUsedAt])
}

// =========================
model CodexEntry {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String   @db.Text
  tags      String[]
  tech      String?
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([published, createdAt])
}

// =========================

model RecruiterProfile {
  id        String          @id @default(cuid())
  userId    String          @unique
  company   String
  website   String?
  phone     String?
  status    RecruiterStatus @default(PENDING)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id])
}

// =========================
model Message {
  id            String   @id @default(cuid())
  applicationId String
  fromUserId    String
  toUserId      String
  body          String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id])
}

// AuditorÃ­a genÃ©rica
model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  action    String
  target    String?
  meta      Json?
  createdAt DateTime @default(now())
}

// =========================================================
// CatÃ¡logo editable de skills / certificaciones / idiomas
// =========================================================
model TaxonomyTerm {
  id          String       @id @default(cuid())
  kind        TaxonomyKind
  slug        String
  label       String
  aliases     String[]     @default([])
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  requiredByJobs  JobRequiredSkill[]
  candidateSkills CandidateSkill[]
  candidateCreds  CandidateCredential[]
  candidateLangs  CandidateLanguage[]

  @@unique([kind, slug])
  @@index([kind])
}

// =========================
model JobRequiredSkill {
  id     String  @id @default(cuid())
  jobId  String
  termId String
  must   Boolean @default(true)
  weight Int?

  job  Job          @relation(fields: [jobId], references: [id])
  term TaxonomyTerm @relation(fields: [termId], references: [id])

  @@unique([jobId, termId])
  @@index([termId])
}

// =========================
model CandidateSkill {
  id     String @id @default(cuid())
  userId String
  termId String
  level  Int?
  years  Int?

  user User         @relation(fields: [userId], references: [id])
  term TaxonomyTerm @relation(fields: [termId], references: [id])

  @@unique([userId, termId])
  @@index([termId])
}

// =========================
model CandidateLanguage {
  id     String              @id @default(cuid())
  userId String
  termId String
  level  LanguageProficiency

  user User         @relation(fields: [userId], references: [id])
  term TaxonomyTerm @relation(fields: [termId], references: [id])

  @@unique([userId, termId])
  @@index([termId])
}

// =========================
model CandidateCredential {
  id           String   @id @default(cuid())
  userId       String
  termId       String
  issuer       String?
  issuedAt     DateTime?
  expiresAt    DateTime?
  credentialId String?
  url          String?

  user User         @relation(fields: [userId], references: [id])
  term TaxonomyTerm @relation(fields: [termId], references: [id])

  @@index([termId])
  @@index([userId, termId])
}

// =========================
// NUEVO: Versiones de CV (para snapshots y PDF)
// =========================
model Resume {
  id           String   @id @default(cuid())
  userId       String
  title        String   @default("Mi CV")
  data         Json
  htmlSnapshot String   @db.Text
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

// =========================================================
// ASSESSMENT SYSTEM
// =========================================================

model AssessmentTemplate {
  id          String  @id @default(cuid())
  title       String
  slug        String  @unique
  description String? @db.Text

  type       AssessmentType
  difficulty AssessmentDifficulty

  totalQuestions Int
  passingScore   Int
  timeLimit      Int

  sections Json

  allowRetry       Boolean @default(false)
  maxAttempts      Int     @default(1)
  shuffleQuestions Boolean @default(true)
  penalizeWrong    Boolean @default(false)

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  questions        AssessmentQuestion[]
  codingChallenges CodingChallenge[]
  jobAssessments   JobAssessment[]
  attempts         AssessmentAttempt[]

  // ðŸ‘‡ NUEVO: invites por template
  invites AssessmentInvite[]

  @@index([slug])
  @@index([type, difficulty])
}

model AssessmentQuestion {
  id         String @id @default(cuid())
  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  section    String
  difficulty AssessmentDifficulty
  tags       String[]

  questionText String  @db.Text
  codeSnippet  String? @db.Text

  options        Json
  allowMultiple  Boolean @default(false)
  explanation    String? @db.Text
  isActive       Boolean  @default(true)
  timesUsed      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  answers AttemptAnswer[]

  @@index([templateId, section])
}

model CodingChallenge {
  id         String @id @default(cuid())
  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  title       String
  description String @db.Text
  difficulty  AssessmentDifficulty
  timeLimit   Int

  instructions String @db.Text
  starterCode  String @db.Text

  inputFiles Json
  testCases  Json

  language    String
  allowedLibs String[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  submissions CodingSubmission[]

  @@index([templateId])
}

model JobAssessment {
  id    String @id @default(cuid())
  jobId String
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id])

  isRequired Boolean @default(true)
  minScore   Int?
  triggerAt  String @default("AFTER_APPLY")

  createdAt DateTime @default(now())

  @@unique([jobId, templateId])
  @@index([jobId])
}

model AssessmentAttempt {
  id String @id @default(cuid())

  candidateId String
  candidate   User   @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id])

  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id])

  status        AttemptStatus @default(NOT_STARTED)
  attemptNumber Int          @default(1)

  startedAt   DateTime?
  submittedAt DateTime?
  expiresAt   DateTime?
  timeSpent   Int?

  totalScore    Int?
  sectionScores Json?
  passed        Boolean?

  flagsJson  Json?
  ipAddress  String?
  userAgent  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  answers          AttemptAnswer[]
  codingSubmissions CodingSubmission[]

  @@index([candidateId, status])
  @@index([applicationId])
  @@index([templateId, status])
}

// âœ… NUEVO: invitaciÃ³n para enviar evaluaciÃ³n a un candidato especÃ­fico (por aplicaciÃ³n)
model AssessmentInvite {
  id     String               @id @default(cuid())
  token  String               @unique
  status AssessmentInviteStatus @default(SENT)

  applicationId String
  application   Application  @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  jobId String
  job   Job                @relation(fields: [jobId], references: [id], onDelete: Cascade)

  candidateId String
  candidate   User         @relation("AssessmentInviteCandidate", fields: [candidateId], references: [id], onDelete: Cascade)

  templateId String
  template   AssessmentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  invitedById String?
  invitedBy   User?        @relation("AssessmentInviteInvitedBy", fields: [invitedById], references: [id], onDelete: SetNull)

  sentAt    DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime?

  @@index([applicationId])
  @@index([jobId])
  @@index([candidateId])
  @@index([templateId])
}

model AttemptAnswer {
  id String @id @default(cuid())

  attemptId String
  attempt   AssessmentAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  questionId String
  question   AssessmentQuestion @relation(fields: [questionId], references: [id])

  selectedOptions String[]

  isCorrect    Boolean?
  pointsEarned Float?
  timeSpent    Int?

  answeredAt DateTime @default(now())

  @@unique([attemptId, questionId])
  @@index([attemptId])
  @@index([questionId])
}

model CodingSubmission {
  id String @id @default(cuid())

  attemptId String
  attempt   AssessmentAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  challengeId String
  challenge   CodingChallenge @relation(fields: [challengeId], references: [id])

  code     String @db.Text
  language String

  testResults Json?
  autoScore   Int?

  manualScores Json?
  manualScore  Int?
  finalScore   Int?

  feedback   String? @db.Text
  reviewedBy String?
  reviewedAt DateTime?

  submittedAt DateTime @default(now())

  @@index([attemptId])
  @@index([challengeId])
}
